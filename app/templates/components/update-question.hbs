{{#if updateQuestionForm}}
<h3>Edit Question</h3>
<div>
<form>
  <div class="form-group">
    <label for="query">Title</label>
    {{input value=query id="query" placeholder=question.query}}
  </div>

  <div class="form-group">
    <label for="notes">Question</label>
    {{input value=notes id="notes" placeholder=question.notes}}
  </div>

  <div class="form-group">
    <label for="author">User Name</label>
    {{input value=author id="author" placeholder=question.author}}
  </div>

  <div class="form-group">
    <label for="timestamp">Date</label>
    {{input value=timestamp id="timestamp" type="date" placeholder=question.timestamp}}
  </div>

  <button class="btn btn-success" {{action 'update' question}}>Finalize Edit</button>
</form>
</div>
{{else}}
  <button class="btn btn-info" {{action 'updateQuestionForm'}}><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
{{/if}}
