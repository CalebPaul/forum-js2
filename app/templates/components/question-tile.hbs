<div class="well well-sm question-well">
  <div class="row">
    <div class="col-md-10">
      <h4 class="text-center">{{#link-to 'question' question.id}}{{question.query}}<small> - {{question.author}}</small>{{/link-to}}</h4> {{unanswered question}} <span class="pull-right glyphicon glyphicon-paperclip" {{action 'followThisDiscussion' question}} ></span>
    </div>
    <div class="text-center row">
      <div class="col-md-8">
        {{#each question.answers as |answertime|}}
          <li><span class="answer-envelope glyphicon glyphicon-envelope"></span> {{moment-calendar question.timestamp}}</li>
        {{/each}}
      </div>
    </div>
  </div>
</div>
