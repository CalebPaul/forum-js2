<h2>Detail</h2>
{{question.query}}
{{question.notes}}
<h4>{{question.author}}, <small>{{moment-from-now question.timestamp}}</small></h4>

<button {{action 'delete' question}}><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>

<h2>Replies</h2>
<ul>
  {{#each question.answers as |answer|}}
    {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
  {{/each}}
</ul>
